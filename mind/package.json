{
  "name": "mind-microservices-api",
  "version": "1.0.0",
  "description": "Scalable Node.js Microservices API for Mental Health Management",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "start:admin": "node services/administrativo/server.js",
    "start:users": "node services/usuarios/server.js",
    "start:emotional": "node services/emocional/server.js",
    "start:agenda": "node services/agenda/server.js",
    "start:all": "concurrently \"npm run start:admin\" \"npm run start:users\" \"npm run start:emotional\" \"npm run start:agenda\"",
    "dev": "nodemon server.js",
    "dev:admin": "nodemon services/administrativo/server.js",
    "dev:users": "nodemon services/usuarios/server.js",
    "dev:emotional": "nodemon services/emocional/server.js",
    "dev:agenda": "nodemon services/agenda/server.js",
    "dev:all": "concurrently \"npm run dev:admin\" \"npm run dev:users\" \"npm run dev:emotional\" \"npm run dev:agenda\"",
    "seed:superadmin": "node scripts/seed-superadmin.js"
  },
  "keywords": [
    "microservices",
    "nodejs",
    "mongodb",
    "jwt",
    "express",
    "mental-health"
  ],
  "author": "Mind Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
